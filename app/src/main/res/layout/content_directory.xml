        android:layout_height="wrap_content"
        android:id="@+id/container_first"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:id="@+id/dic_first"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="14dp"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:id="@+id/main_id"
                android:text="Fire Brigade"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:textSize="12dp"
                android:fontFamily="serif"
                android:layout_marginTop="15dp"
                android:text="Kathmandu, Nepal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:textSize="12dp"
                android:fontFamily="serif"
                android:layout_marginTop="30dp"
                android:text="101"/>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="13dp"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:text="Police Control"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:textSize="12dp"
                android:fontFamily="serif"
                android:layout_marginTop="15dp"
                android:text="Kathmandu, Nepal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:textSize="12dp"
                android:fontFamily="serif"
                android:layout_marginTop="30dp"
                android:text="100"/>

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginTop="10dp"
        android:id="@+id/dic_second"
        android:layout_below="@+id/dic_first"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="13dp"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:text="Ambulance"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:textSize="12dp"
                android:fontFamily="serif"
                android:layout_marginTop="15dp"
                android:text="Kathmandu, Nepal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="5dp"
