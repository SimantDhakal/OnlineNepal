        android:layout_below="@+id/container_first"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Emergency Phone Directory"
            android:textStyle="bold"
            android:textSize="14dp"
            android:fontFamily="serif"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/container_third"
        android:layout_marginTop="12dp"
        android:weightSum="2"
        android:layout_below="@id/container_second">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginRight="7dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ambulance"
                android:drawableTop="@drawable/ic_contact_phone_black_24dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textSize="14dp"
                android:fontFamily="serif"
                android:textColor="#807f7e"
                android:textStyle="bold"
                android:drawableTint="@color/dot_dark_screen3"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="7dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Embassy"
                android:drawableTop="@drawable/ic_contact_phone_black_24dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textSize="14dp"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:textColor="#807f7e"
                android:drawableTint="@color/dot_dark_screen3"/>


        </android.support.v7.widget.CardView>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/container_four"
            android:layout_marginTop="12dp"
            android:weightSum="2"
            android:layout_below="@id/container_third">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginRight="7dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hospital"
                    android:drawableTop="@drawable/ic_contact_phone_black_24dp"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:textSize="14dp"
                    android:fontFamily="serif"
                    android:textColor="#807f7e"
                    android:textStyle="bold"
                    android:drawableTint="@color/dot_dark_screen3"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="120dp"
