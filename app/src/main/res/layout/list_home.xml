<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:layout_margin="10dp"
    android:layout_marginBottom="12dp"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/main_log"
            android:layout_margin="8dp"
            android:layout_weight="3"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/logo"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginLeft="3dp"
                android:id="@+id/tite">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/author"
                    android:paddingTop="5dp"
                    android:textSize="15dp"
                    android:textColor="#737882"
                    android:fontFamily="serif"
                    android:textStyle="bold"
                    android:paddingBottom="5dp"
                    android:text="BBC NEWS" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/time"
                    android:textSize="14dp"
                    android:textColor="#737882"
                    android:fontFamily="serif"
                    android:text="2017/12/12"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/vron"
                    android:layout_gravity="center"
                    android:backgroundTint="#747a84"
                    android:layout_marginTop="12dp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/title"
                android:maxLines="1"
                android:minLines="1"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="#737882"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:textSize="14dp"
                android:text="This is a heading of the thr applcation of the news."/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:paddingTop="5dp"
                android:layout_marginTop="5dp"
                android:paddingBottom="5dp"
                android:layout_gravity="center"
                android:id="@+id/galleryImage" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sdetails"
                android:maxLines="2"
                android:minLines="2"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="#737882"
                android:paddingTop="5dp"
                android:paddingBottom="7dp"
                android:text="This is a title section to find the introduction of the news."/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>




