<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sunset"
    tools:context="com.simant.onlinenepal.ExploreFragment">

    <!-- TODO: Update blank fragment layout -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="70dp"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/status"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:text="SHOW HUMANITIES, HELP HUMAN"
                    android:fontFamily="monospace"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/activity_padding_horizontal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/shortintro"
                    android:textColor="#fff"
                    android:textAlignment="center"
                    android:text="@string/explore_desc_help"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/activity_padding_horizontal" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_padding_horizontal"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/activity_padding_horizontal"
                android:paddingRight="@dimen/activity_padding_horizontal"
                android:weightSum="3">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/wedo"
                    android:text="Check, how you can help ?"
                    android:layout_weight="1"
                    android:textColor="#fff"
                    android:fontFamily="serif"
                    android:background="#f73918" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_padding_horizontal"
                android:orientation="horizontal"
                android:textAlignment="center"
                android:gravity="center"
                android:paddingLeft="@dimen/activity_padding_horizontal"
                android:paddingRight="@dimen/activity_padding_horizontal"
                android:weightSum="2">

                <Button
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:id="@+id/explore_blood"
                    android:textAlignment="center"
                    android:text="Blood Help"
                    android:padding="10dp"
                    android:fontFamily="serif"
                    android:layout_weight="1"
                    android:textColor="#fff"
                    android:background="@color/colorWhiteTransparent" />

                <Button
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:id="@+id/pfive"
                    android:textAlignment="center"
                    android:text="OTHERS"
                    android:padding="10dp"
                    android:fontFamily="serif"
                    android:layout_marginLeft="@dimen/activity_padding_horizontal"
                    android:layout_marginRight="@dimen/activity_padding_horizontal"
                    android:layout_weight="1"
                    android:textColor="#fff"
                    android:background="@color/colorWhiteTransparent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_padding_horizontal"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/activity_padding_horizontal"
                android:paddingRight="@dimen/activity_padding_horizontal"
                android:weightSum="3">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/explore_slogan"
                    android:text="Your small effort can save other's life. Step up to save humanities"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:textColor="#fff"
                    android:fontFamily="serif" />
            </LinearLayout>


        </LinearLayout>

</FrameLayout>
